<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/cover_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover_image"
        android:layout_marginTop="25dp"
        android:text="Selena Gomez"/>

    <TextView
        android:id="@+id/cover_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover_image"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cover_title"
        android:text="The heart wants what it wants"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover_image"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cover_description"
        android:text="USA"/>

</RelativeLayout>
