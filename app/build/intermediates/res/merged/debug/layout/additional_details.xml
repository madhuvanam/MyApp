<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="Collection Name"/>

    <TextView
        android:id="@+id/collection_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collection_name"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="Collection Price"/>

    <TextView
        android:id="@+id/track_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/collection_price"
        android:text="Track Price"/>

    <TextView
        android:id="@+id/radio_station_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/track_price"
        android:text="Long Description"
        android:autoLink="none"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/radio_station_url">
    </WebView>

</RelativeLayout>
